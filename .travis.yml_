sudo: required
language: python
python:
  - "3.5"
before_install:
- export DISPLAY=:99.0
- pip install --upgrade pip
- sudo add-apt-repository ppa:ubuntu-wine/ppa -y
- sudo apt-get update -qq
- sudo apt-get install -qq wine
- wget https://www.python.org/ftp/python/3.5.2/python-3.5.2-amd64.exe --output-document=python.exe
       
- wine msiexec /i python.exe /qn
- wine c:\\Python35\\python.exe -m pip install pypiwin32
- wine c:\\Python35\\python.exe -m pip install conda
- wine c:\\Python35\\Scripts\\conda init
- wine c:\\Python35\\Scripts\\conda install --yes biopython
#- wine c:\\Python35\\Scripts\\conda install --yes bsddb 
#- wine c:\\Python35\\Scripts\\conda install -c https://conda.binstar.org/bnoon bsddb3
#- wine c:\\Python35\\python.exe -m pip install bsddb3
- wine c:\\Python35\\Scripts\\conda install --yes nose
- wine c:\\Python35\\python.exe -c "import Bio;print Bio"
- wine c:\\Python35\\python.exe -m pip install -e .
#- wine c:\\Python35\\python.exe -m pip install nose
#- wine c:\\Python35\\Scripts\\nosetests -w tests -v --with-doctest
install:
  - pip install -e .
before_script:
  - pip install -r requirements.txt
  - pip install coveralls
script:
   - nosetests -w tests -v --with-coverage --with-doctest
after_script:
  #- wine c:\\Python35\\Scripts\\nosetests -w tests -v --with-doctest
